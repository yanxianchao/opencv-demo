// ================================================
// VS Code 工作区设置文件
// 作用：覆盖用户全局设置，为当前项目提供特定的编辑器配置
// ================================================
{
    // C/C++扩展默认配置提供者
    // 使用CMake Tools扩展提供的配置
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    
    // C/C++ IntelliSense模式
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    
    // Clang格式化样式配置
    "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 100 }",
    
    // CMake构建目录
    "cmake.buildDirectory": "${workspaceFolder}/build",
    
    // 打开工作区时自动配置CMake
    "cmake.configureOnOpen": true,
    
    // CMake生成器
    "cmake.generator": "Unix Makefiles",
    
    // 文件关联配置，指定文件扩展名对应的语言
    "files.associations": {
        "*.hpp": "cpp",    // .hpp文件视为C++文件
        "*.cpp": "cpp",    // .cpp文件视为C++文件
        "*.h": "c",        // .h文件视为C文件
        "*.c": "c",        // .c文件视为C文件
        "*.cc": "cpp",     // .cc文件视为C++文件
        "*.cxx": "cpp"     // .cxx文件视为C++文件
    },
    
    // 保存时自动格式化代码
    "editor.formatOnSave": true,
    
    // Tab大小为4个空格
    "editor.tabSize": 4,
    
    // 使用空格代替Tab
    "editor.insertSpaces": true,
    
    // 显示标尺线（100字符宽度）
    "editor.rulers": [100],
    
    // 自动修剪行尾空白字符
    "files.trimTrailingWhitespace": true,
    
    // 文件末尾插入新行
    "files.insertFinalNewline": true,
    
    // 集成终端工作目录
    "terminal.integrated.cwd": "${workspaceFolder}",
    
    // 搜索时排除的文件和文件夹
    "search.exclude": {
        "**/build/**": true,           // 排除build目录
        "**/cmake-build-*/**": true,   // 排除CLion构建目录
        "**/.git/**": true,            // 排除Git目录
        "**/node_modules/**": true     // 排除Node.js模块目录
    },
    
    // 文件资源管理器中隐藏的文件和文件夹
    "files.exclude": {
        "**/build/**": true,           // 隐藏build目录
        "**/cmake-build-*/**": true,   // 隐藏CLion构建目录
        "**/.git/**": true             // 隐藏Git目录
    }
}